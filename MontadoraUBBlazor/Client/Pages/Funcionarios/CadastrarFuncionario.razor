@page "/funcionarios/cadastrofuncionarios"
@inject HttpClient http
@inject NavigationManager navigation
<h3>Cadastrar Funcionario</h3>

<EditForm Model="@funcionario" OnValidSubmit="@CadastrarFuncionarios">
    <div class="form-group">
        <label>Nome</label>
        <InputText @bind-Value="@funcionario.NomeFunc"></InputText>
    </div>

    <div class="form-group">
        <label>CPF</label>
        <InputText @bind-Value="@funcionario.CPFFunc"></InputText>
    </div>

    <div class="form-group">
        <label>Telefone</label>
        <InputText @bind-Value="@funcionario.TelefoneFunc"></InputText>
    </div>

    <div class="form-group">
        <label>E-mail</label>
        <InputText @bind-Value="@funcionario.EmailFunc"></InputText>
    </div>

    <div class="form-group">
        <label>CEP</label>
        <InputText @bind-Value="@funcionario.CEPFunc"></InputText>
    </div>

    <div class="form-group">
        <label>Rua e numero, apartamento e andar se for o caso</label>
        <InputText @bind-Value="@funcionario.RuaFunc"></InputText>
    </div>

    <div class="form-group">
        <label>Bairro</label>
        <InputText @bind-Value="@funcionario.BairroFunc"></InputText>
    </div>

    <div class="form-group">
        <label>Cidade</label>
        <InputText @bind-Value="@funcionario.CidadeFunc"></InputText>
    </div>

    <div class="form-group">
        <label>Estado</label>
        <InputText @bind-Value="@funcionario.EstadoFunc"></InputText>
    </div>

    <div class="form-group">
        <label>Data de Nascimento</label>
        <InputDate @bind-Value="@funcionario.NascimentoFunc"></InputDate>
    </div>

    <div class="form-group">
        <label>Entrada na empresa</label>
        <InputDate @bind-Value="@funcionario.EntradaFunc"></InputDate>
    </div>

    <div class="form-group">
        <label>Cargo</label>
        <InputText @bind-Value="@funcionario.CargoFunc"></InputText>
    </div>

    <div class="form-group">
        <label>Status</label>
        <InputDate @bind-Value="@funcionario.StatusFunc"></InputDate>
    </div>

    <button type="submit" class="btn btn-primary" @onclick="@(async () => await CadastrarFuncionarios())">Cadastrar</button>
</EditForm>
@code {
    Funcionario funcionario = new Funcionario();
    async Task CadastrarFuncionarios()
    {
        await http.PostAsJsonAsync("api/funcionario", funcionario);
        navigation.NavigateTo("funcionarios");
    }
}
